<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\NutritionPlan\Entity\Segment" repository-class="App\Infrastructure\NutritionPlan\Persistence\DoctrineSegmentsCatalog" table="segment">
        <id name="id" type="string" />
        <field name="position" type="integer"/>

        <many-to-one field="startCheckpoint" target-entity="App\Domain\NutritionPlan\Entity\Checkpoint">
            <join-column name="start_checkpoint_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one field="endCheckpoint" target-entity="App\Domain\NutritionPlan\Entity\Checkpoint">
            <join-column name="end_checkpoint_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <many-to-one field="nutritionPlan" target-entity="App\Domain\NutritionPlan\Entity\NutritionPlan" inversed-by="segments">
            <join-column name="nutrition_plan_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many field="nutritionItems" target-entity="App\Domain\NutritionPlan\Entity\NutritionItem" mapped-by="segment" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
