<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\NutritionPlan\Entity\ImportedRace" table="imported_race">
        <id name="id" type="string" />
        <field name="runnerId" type="string" column="runner_id"/>
        <field name="externalRaceId" type="string" column="external_race_id"/>
        <field name="externalEventId" type="string" column="external_event_id"/>
        <field name="name" type="string"/>
        <field name="distance" type="integer"/>
        <field name="ascent" type="integer"/>
        <field name="descent" type="integer"/>
        <field name="startDateTime" type="datetime_immutable" column="start_date_time"/>
        <field name="location" type="string"/>

        <one-to-many field="checkpoints" target-entity="App\Domain\NutritionPlan\Entity\Checkpoint" orphan-removal="true" mapped-by="importedRace">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="distanceFromStart" direction="ASC" />
            </order-by>
        </one-to-many>

        <one-to-many field="nutritionPlans" target-entity="App\Domain\NutritionPlan\Entity\NutritionPlan" mapped-by="race">
            <cascade>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>

</doctrine-mapping>
