<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Race\Entity\Race" table="race" repository-class="App\Infrastructure\Race\Persistence\Repository\DoctrineRacesCatalog">
        <id name="id" type="string" />
        <field name="name" type="string" />
        <field name="date" type="datetime_immutable" />
        <field name="runnerId" type="string" column="runner_id"/>
        <embedded name="address" class="Address" />
        <embedded name="profile" class="Profile" />
        <one-to-many field="checkpoints" target-entity="App\Domain\Race\Entity\Checkpoint" mapped-by="race" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="metricsFromStart.distance" direction="ASC" />
            </order-by>
        </one-to-many>
        <one-to-one field="nutritionPlan" target-entity="App\Domain\Race\Entity\NutritionPlan" inversed-by="race" orphan-removal="true">
            <join-column name="nutrition_plan_id" referenced-column-name="id" nullable="true"/>
        </one-to-one>
        <one-to-many field="segments" target-entity="App\Domain\Race\Entity\Segment" mapped-by="race" orphan-removal="true">
            <cascade><cascade-persist/><cascade-remove/></cascade>
            <order-by><order-by-field name="start.distance.value" direction="ASC"/></order-by>
        </one-to-many>
    </entity>

</doctrine-mapping>