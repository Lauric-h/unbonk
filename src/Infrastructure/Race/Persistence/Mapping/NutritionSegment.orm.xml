<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Race\Entity\NutritionSegment" repository-class="App\Infrastructure\Race\Persistence\Repository\DoctrineNutritionSegmentsCatalog">
        <id name="id" type="string" />
        <embedded name="carbsTarget" class="App\Domain\Shared\Entity\Carbs" />

        <many-to-one field="nutritionPlan" target-entity="App\Domain\Race\Entity\NutritionPlan" inversed-by="nutritionSegments" >
            <join-column name="nutrition_plan_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>

        <one-to-many field="nutritionItems" target-entity="App\Domain\Race\Entity\NutritionItem" orphan-removal="true" mapped-by="nutritionSegment">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
            <order-by>
                <order-by-field name="carbs.value" direction="ASC" />
            </order-by>
        </one-to-many>

        <field name="segmentPosition" nullable="false" type="integer" />

    </entity>

</doctrine-mapping>