<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="App\Domain\Race\Entity\Checkpoint" table="checkpoint" repository-class="App\Infrastructure\Race\Persistence\DoctrineCheckpointsCatalog">
        <id name="id" type="string" />
        <field name="name" type="string" />
        <field name="location" type="string" />
        <field name="checkpointType" type="string" enum-type="App\Domain\Race\Entity\CheckpointType" />
        <embedded name="metricsFromStart" class="MetricsFromStart" />
        <many-to-one field="race" target-entity="App\Domain\Race\Entity\Race" inversed-by="checkpoints" >
            <join-column name="race_id" referenced-column-name="id" nullable="false" on-delete="CASCADE" />
        </many-to-one>
    </entity>

</doctrine-mapping>