<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Domain\Race\Entity\Segment" repository-class="App\Infrastructure\Race\Persistence\Repository\DoctrineSegmentsCatalog">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <embedded name="distance" class="App\Domain\Shared\Entity\Distance" />
        <embedded name="ascent" class="App\Domain\Shared\Entity\Ascent" />
        <embedded name="descent" class="App\Domain\Shared\Entity\Descent" />
        <embedded name="estimatedTimeInMinutes" class="App\Domain\Shared\Entity\Duration" />

        <field name="position" type="integer" nullable="false" />

        <many-to-one field="start" target-entity="App\Domain\Race\Entity\Checkpoint">
            <join-column name="start_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>

        <many-to-one field="finish" target-entity="App\Domain\Race\Entity\Checkpoint">
            <join-column name="finish_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>

</doctrine-mapping>